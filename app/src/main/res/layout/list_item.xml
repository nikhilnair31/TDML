<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitemLinearVC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/listitemTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:paddingVertical="5dp"
        android:paddingStart="6dp"
        android:text="Task"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/listitemTaskDeets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:paddingVertical="5dp"
        android:paddingStart="6dp"
        android:text="Details"
        android:textColor="@color/colorSecondaryText"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/listitemLinearH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBackground"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/listitemTaskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:contextClickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-light"
                android:paddingVertical="5dp"
                android:paddingStart="6dp"
                android:text="Date"
                android:textColor="@color/colorTertiaryText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/listitemTaskPred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:clickable="true"
                android:contextClickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-light"
                android:paddingVertical="5dp"
                android:paddingEnd="6dp"
                android:text="Prediction"
                android:textColor="@color/colorTertiaryText"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>