<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@color/colorSecondaryText</item>
        <item name="android:dateTextAppearance">@color/colorTertiaryText</item>
    </style>

    <style name="SingleTaskTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@color/colorSecondaryText</item>
        <item name="android:dateTextAppearance">@color/colorTertiaryText</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@color/colorPrimaryText</item>
        <item name="android:dateTextAppearance">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
